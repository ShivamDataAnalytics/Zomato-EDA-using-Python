### calculate avg rating of each resturant

df.groupby('name')['rate'].mean().nlargest(20).plot.bar()

df_rate=df.groupby('name')['rate'].mean().to_frame()
df_rate=df_rate.reset_index()
df_rate.columns=['restaurant','rating']
df_rate.head(20)

df_rate.shape

